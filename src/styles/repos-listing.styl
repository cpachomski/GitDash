@import "variables"
@import "mixins"



.repos-listing-content

  width: 100%
  max-width: 1200px
  padding: 25px
  margin: 100px auto 0px

  h2
    color: gray

  ul
    padding-left: 0px
    clearfix()

  li:not(.repo-card-stat)
    position: relative
    float:left
    @media (min-width: 1000px)
      width: 30%
      margin: 1%
    width: 46%
    margin: 1%
    min-height: 400px
    z-index: 1

    &:hover
      .octicon
        color: gray

    .slides-up
      position: absolute
      height: 100%
      width: 100%
      background-color: gray
      z-index: 2
      transition: all 0.3s ease-in
      overflow: hidden

      h4
        color: white
        padding: 15px
        margin: 0px
      svg
        position: absolute
        top: 60px
        width: 100%
        line
          stroke: white
          stroke-width: 10px
          stroke-dasharray: 10 0
          stroke-dashoffset: -100
          transition: all 0.3s ease-in
      .hover-text
        position: absolute
        top: 200px
        opacity: 0
        left: -300px
        transition: all 0.3s ease-in-out
        transition-delay: 0.2s
        .octicon
          color: white
          font-size: 40px
          horiz-centered()
          position: absolute



      >.octicon-repo
        color: white
        font-size: 100px
        position: absolute
        vert-centered()
        horiz-centered()
        top: 30%
        transition: all 0.3s ease-in

      &:hover
        transform: scale(1.03)
        box-shadow: -1px 13px 100px -12px rgba(0,0,0,0.75)

        line
          stroke-dasharray: 10 10

        .octicon-repo
          transform: scale(0.5) translate(-100%, -50%)

        .hover-text
          opacity: 1
          horiz-centered()


    a
      position: absolute
      top: 15px
      left: 5%
      right: 0px
      font-size: 20px
      color: white
      font-size: 20px
      display: block
      transition: all .3s ease-in

.repo-card-stats
  margin-top: 225px
  clearfix()

  .repo-card-stat
    padding: 15px
    font-size: 12px
    width: 27%
    margin: 0 3%
    display: inline-block
    position: relative

    &:after
      position: absolute
      content: ''
      width: 100%
      top: 50px
      left: 0px
      height: 2px
      background-color: white !important

    .stat-name
      horiz-centered()
      font-size: 14px

    .stat-val
      position: absolute
      horiz-centered()
      top: 65px
      font-size: 18px




