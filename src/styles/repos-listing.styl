@import "variables"
@import "mixins"



.repos-listing-content

  width: 100%
  max-width: 1200px
  padding: 25px
  margin: 100px auto 0px

  h2
    color: gray

  ul
    padding-left: 0px
    clearfix()

  li:not(.repo-card-stat)
    position: relative
    float:left
    @media (min-width: 1000px)
      width: 30%
      margin: 1%
    width: 46%
    margin: 1%
    min-height: 400px
    z-index: 1

    &:hover
      .octicon
        color: gray

    .slides-up
      position: absolute
      height: 100%
      width: 100%
      background-color: gray
      z-index: 2
      transition: all 0.2s ease-in

      h4
        color: white
        padding: 15px
        margin: 0px
      svg
        position: absolute
        top: 60px
        width: 100%
        line
          stroke: white
          stroke-width: 10px
          stroke-dasharray: 10 0
          stroke-dashoffset: -100
          transition: all 0.3s ease-in

      .octicon
        color: white
        font-size: 100px
        position: absolute
        vert-centered()
        horiz-centered()
        top: 30%

      &:hover
        transform: scale(1.03)
        box-shadow: -1px 13px 68px -12px rgba(0,0,0,0.75)
        line
          stroke-dasharray: 10 10
          stroke-width: 10px



    a
      position: absolute
      top: 15px
      left: 5%
      right: 0px
      font-size: 20px
      color: white
      font-size: 20px
      display: block
      transition: all .3s ease-in

.repo-card-stats
  margin-top: 200px


  .repo-card-stat
    height: 50px


