@import 'variables'
@import 'mixins'

nav.top-nav
  background-color: gray
  margin-bottom: 0px

  top: 0px
  left: 0px
  position: fixed
  z-index: 999
  width: 100%

  ul
    max-width: 1200px
    margin: 0 auto
    clearfix()


  li
    background-color: gray
    color: white
    height: 100%
    position: relative
    padding: 0px 15px
    float: right
    margin-top: 30px
    display: block !important

    a
      color: white
      font-size: 20px

    svg
      position: absolute !important
      width: 75%
      height: 3px
      left: 13%
      bottom: -10px

      line
        stroke: white
        stroke-width: 3px
        stroke-dash-array: 5 0
        transition: stroke-dasharray .3s ease-in

    &:not(:first-child):hover
      line
        stroke-dasharray: 5 5
        stroke-dashoffset: -3px
        stoke-width: 10px



    &:first-child
      font-size: 60px
      float: left
      margin-top: 0px

      &:hover
        line
          animation: anim-dashoffset-right 1s infinite
          animation-timing-function: linear


      span
        position: relative

        svg
          height: 2px
          position: absolute
          width: calc(100% - 10px)
          left: 6px
          bottom: 21px

          line
            stroke: white
            stroke-width: 5px
            stroke-dasharray: 5px 5px

